<!-- progression bar -->
    <progress class="progress is-link" value="33" max="100">33%</progress>

    <!-- container holding all info elements -->
    <div class="big-container">
      <!-- logo -->
      <img src="./public/assets/img/logo.png" width="150" alt="" id="logo" />
      <br />
      <b class="header">Welcome to FeeLancer</b>
      <br />
      <h2>Please complete the info below to create a profile</h2>

      <hr />

      <!-- first name section -->
      <div class="control">
        <p>First Name</p>
        <input
          id="first-name-input"
          class="input is-hovered"
          type="text"
          placeholder="Hovered input"
        />
      </div>

      <br />

      <!-- last name section -->
      <p>Last Name</p>
      <div class="control">
        <input
          id="last-name-input"
          class="input is-hovered"
          type="text"
          placeholder="Hovered input"
        />
      </div>

      <br />

      <!-- username section -->
      <p>Username</p>
      <div class="control">
        <input
          id="user-name-input"
          class="input is-hovered"
          type="text"
          placeholder="Hovered input"
        />
      </div>

      <br />

      <!-- password section -->
      <p>Password</p>
      <div class="field">
        <p class="control has-icons-left">
          <input
            id="password-input"
            class="input"
            type="password"
            placeholder="Password"
          />
          <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
          </span>
        </p>
      </div>

      <br />

      <!-- confirm password section -->
      <p>Confirm Password</p>
      <div class="field">
        <p class="control has-icons-left">
          <input
            id="password-confirm"
            class="input"
            type="password"
            placeholder="Password"
          />
          <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
          </span>
        </p>
      </div>

      <br />

      <!-- button to continue -->
      <button id="continue-button" class="button is-medium">Continue</button>
    </div>